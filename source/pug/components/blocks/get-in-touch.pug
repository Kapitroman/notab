mixin get-in-touch()
  section.get-in-touch
    .container
      .get-in-touch__wrap
        .get-in-touch__text-content
          .get-in-touch__highlight
          h2.get-in-touch__title.heading Get In Touch
          p.get-in-touch__text.text
            | Have questions about Noble or just want to&nbsp;say hello?
            | <span>Drop us a line and a member of our&nbsp;team will getback to you shortly.</span>
        .get-in-touch__form(data-validate="")
          form(action="#", method="post")
            .get-in-touch__form-fields
              +custom-input({
                inputPlaceholder: "Name",
                inputName: "person-name",
                inputAriaLabel: "person name"
              })&attributes(({
                'class': "custom-input--span",
                'data-validate-type': "text"
              }))
              +custom-input({
                inputPlaceholder: "Venue Name",
                inputName: "venue-name",
                inputAriaLabel: "venue name"
              })&attributes(({
                'class': "custom-input--span",
                'data-validate-type': "text"
              }))
              +custom-input({
                inputPlaceholder: "Venue City",
                inputName: "venue-city",
                inputAriaLabel: "venue city"
              })&attributes(({
                'data-validate-type': "text"
              }))
              +custom-input({
                inputPlaceholder: "State City",
                inputName: "state-city",
                inputAriaLabel: "state city"
              })&attributes(({
                'data-validate-type': "text"
              }))
              +custom-input({
                inputPlaceholder: "Email",
                inputName: "email",
                inputAriaLabel: "email"
              })&attributes(({
                'class': "custom-input--span",
                'data-validate-type': "email"
              }))
              +custom-input({
                inputPlaceholder: "Subject",
                inputName: "subject",
                inputAriaLabel: "subject"
              })&attributes(({
                'class': "custom-input--span",
                'data-validate-type': "text"
              }))
              +custom-textarea({
                inputPlaceholder: "Message",
                inputName: "message",
                inputAriaLabel: "message",
                inputMinLength: 2
              })&attributes(({
                'class': "custom-textarea--span",
                'data-validate-type': "text"
              }))
            .get-in-touch__form-button
              button(type="submit") Send
          .get-in-touch__highlight.get-in-touch__highlight--bottom
        .get-in-touch__download-apps
          p.get-in-touch__download-slogan DOWNLOAD OUR APP
          .apps
            a(href="#").apps__item.apps__item--app-store
              +picture("content", "app-store", "png", 136, 32, "app store")
            a(href="#").apps__item
              +picture("content", "google-play", "png", 158, 33, "google play")
